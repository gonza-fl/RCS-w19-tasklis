{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Server (Watch Mode)",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/main.js",
      "restart": true,
      "runtimeArgs": [
        "--watch"
      ],
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Server (Single Run)",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/main.js",
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal"
    }
  ]
}